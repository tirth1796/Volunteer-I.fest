<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/AppTheme1"
    android:background="#0D2237"
    tools:context="com.example.tirthshah.volunteerifest.MainActivity">

    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_weight="1"
            android:background="#0D2237"
            android:textColor="#fe1544"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/register"
            android:text="Register"/>

        <Button
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_weight="1"
            android:textColor="#fe1544"
            android:background="#0D2237"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check Registration"
            android:id="@+id/checkRegistration" />
    </LinearLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ifest_logo"
        android:layout_above="@+id/linearLayout" />
</RelativeLayout>